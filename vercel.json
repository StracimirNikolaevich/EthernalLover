{
  "functions": {
    "api/**/*.py": {
      "runtime": "@vercel/python",
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.py"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/characters",
      "destination": "/public/characters.html"
    },
    {
      "source": "/character",
      "destination": "/public/character.html"
    }
  ],
  "headers": [
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
